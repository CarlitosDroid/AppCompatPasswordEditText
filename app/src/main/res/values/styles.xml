<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:background">@drawable/shape_editext_white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ErrorColor" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/md_red_600</item>
    </style>

    <style name="HintColorGrey" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/md_grey_700</item>
    </style>

    <style name="HintColorBlack" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

</resources>
